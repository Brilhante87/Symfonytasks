{% extends 'template.html.twig' %}

{% block title %}Liste des personnes{% endblock %}

{% block body %}
<div class="row">
    {% for persone in persones %}
    <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title">{{ persone.name }}</h5>
          <h6 class="card-subtitle mb-2 text-muted">{{ persone.firstname }} {{ persone.name }}</h6>
          <p class="card-text">Age:  {{ persone.age}}</p>
          <a href="{{path('persone.detail', {id: persone.id})}}" class="card-link">DÃ©tails</a>
          <a href="{{path('persone.delete', {id: persone.id})}}" class="card-link">Delete</a>
        </div>
    </div>  
    {% endfor %}     
</div>
{% if isPaginated is defined and isPaginated %}
<div class="row mt-2"> 
  <nav aria-label=" col Page navigation example">
    <ul class="pagination">
      {% if page != 1 %}
        <li class="page-item">
        <a 
          class="page-link"
          href="{{ path('persone.list.alls', {page: page - 1, nbre: nbre})}}"
          >Previous
        </a></li>
      {% endif %}
      {% for i in range(1, nbrePage) %}
        <li class="page-item">
          <a class="page-link"
            href="{{ path('persone.list.alls', {page: i, nbre: nbre})}}"
            >{{i}}
          </a>
       </li>
      {% endfor %}
      {% if page != nbrePage %}
        <li class="page-item">
          <a 
            class="page-link"
            href="{{ path('persone.list.alls', {page: page - 1, nbre: nbre})}}"
            >Next
          </a></li>
      {% endif %}
    </ul>
  </nav> 
</div>
{% endif %} 
  
{% endblock %}
