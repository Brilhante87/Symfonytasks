{% extends 'template.html.twig' %}
{% block PageTitle %}
  Tableau de notes  
{% endblock %}
{% block body %}
    <table class="table table-bordered table-striped">
        {% for note in notes %}
            <tr>
                <td>{{ note }}</td>
            </tr>
        {% endfor %}
    </table> 
    {# nb des elements min et max #}   
    <div class="alert alert-info">
        <p> Nombre de notes : {{ notes |length }} </p>
        <p> Note minimale : {{ min(notes) }} </p>
        <p> Note maximale : {{ max(notes) }} </p>  
    </div>        
{% endblock %} 
   
