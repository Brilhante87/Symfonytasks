{% extends 'template.html.twig' %}
{% block Title %}
  Users
{% endblock %}
{% block PageTitle %}
  Users  
{% endblock %}
{% block body %} 
<div class="alert alert-warning">
  <a href="{{path('app_tab', {nb : 7})}}"> Stats table </a> {#Passando um parametro em link #}
  
  <table class="table">
    <tr class= "table-active">
        <td>firstname</td>
        <td>name</td>
        <td>age</td>
        <td>message</td>
    </tr> 
    {% for user in users %}
    <tr class= "table-{% if loop.index is odd %}danger{% else %}warning{% endif %}">
        <td>user.firstname</td>
        <td>user.name</td>
        <td>user.age</td>
        <td>user.message</td>
          
    </tr> 
    {% endfor %}
  </table>  
{% endblock %}  
