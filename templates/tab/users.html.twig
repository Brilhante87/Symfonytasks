{% extends 'template.html.twig' %}
{% block Title %}
  Users
{% endblock %}
{% block PageTitle %}
  Users  
{% endblock %}
{% block body %} 

  <a  href="{{path('app_tab', {nb : 7})}}"> Stats table </a> {#Passando um parametro em link #}  
  {{ include('fragments/date-jour.html.twig') }}
  <table class="table">
    <tr class= "table-active">
        <td>firstname</td>
        <td>name</td>
        <td>age</td>
        <td>message</td>
    </tr> 
    {% for user in users %}
    <tr class= "table-{% if loop.index is odd %}danger{% else %}warning{% endif %}">
        <td>{{user.firstname}}</td>
        <td>{{user.name}}</td>
        <td>{{user.age}}</td>
        <td>{{render(controller('App\\Controller\\PrimeiroController::sayHellow',{firstname: user.firstname, name: user.name}))}}</td>
    </tr> 
    {% endfor %}
  </table>  
{% endblock %}  
